extends layout

block content
    h1= title
        if(errors)
            h2.error Ooops! 
            ul.error    
                each error in errors 
                    li= error.message  

    form(method='POST')
        p 
            label(for='title') Title 
            input#title(name='title' type='text' value= book.title required)
        p 
            label(for='author') Author 
            input#author(name='author' type='text' value= book.author required)
        p 
            label(for='genre') Genre 
            input#genre(name='genre' type='text' value= book.genre)
        p 
            label(for='year') Year
            input#year(name='year' type='text' value= book.year)
        p 
            input(type='submit' value='Update Book')
        p 
            a.button(href='/books') Cancel
        p 
            input(type='submit' value='Delete Book' formaction="/books/" + book.id + "/delete")